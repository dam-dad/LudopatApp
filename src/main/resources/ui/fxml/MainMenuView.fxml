<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox id="box" alignment="CENTER" maxHeight="275.0" maxWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="logo" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true">
               <VBox.margin>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
               <image>
                  <Image url="@../images/Untitled.png" />
               </image>
            </ImageView>
            <Button fx:id="singlePlayerButton" maxWidth="145.0" mnemonicParsing="false" onAction="#singlePlayerAction" text="Un jugador" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button id="alternate" fx:id="multiPlayerButton" layoutX="10.0" layoutY="10.0" maxWidth="145.0" mnemonicParsing="false" onAction="#multiPlayerAction" text="Multijugador" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="documentationButton" layoutX="10.0" layoutY="35.0" maxWidth="145.0" mnemonicParsing="false" onAction="#documentationAction" text="Documentacion" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button id="alternate" fx:id="exitButton" layoutX="10.0" layoutY="60.0" maxWidth="145.0" mnemonicParsing="false" onAction="#exitAction" text="Salir" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <stylesheets>
      <URL value="@../css/menuStyle.css" />
      <URL value="@../css/mainMenuStyle.css" />
   </stylesheets>
</BorderPane>
